{
  "name": "ntc-bus-tracking-api",
  "version": "1.0.0",
  "description": "Real-time GPS tracking system for NTC Sri Lanka inter-provincial buses",
  "main": "server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:watch": "nodemon --watch src --ext js,json server.js",
    "seed": "node scripts/seedBuses.js",
    "seed:routes": "node scripts/seedRoutes.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "validate": "pnpm run lint && pnpm run test",
    "clean": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "health": "curl http://localhost:3000/health || echo 'Server not running'"
  },
  "keywords": [
    "bus-tracking",
    "gps",
    "real-time",
    "sri-lanka",
    "ntc",
    "express",
    "mongodb",
    "rest-api"
  ],
  "author": "NTC Sri Lanka Development Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "ignore": [
      "tests/",
      "docs/",
      "coverage/",
      "*.test.js"
    ]
  }
}
